##  Analog Devices Cadtools Environment Setup

##  Skip remaining setup if not an interactive shell
if ($?USER == 0 || $?prompt == 0) exit

##  Add to path
# faddp ~/bin  (adds to front of path)
# remp  ~/bin  (removes from path)
addp ~/bin 
addp /cad/apps/util/bin
#source /home/mriendea/bin/mrp.csh

##  Default printer and editor
setenv PRINTER bd5pr14
setenv EDITOR vim

##  CDPATH and $PROJ help to get around project
set proj = /proj/asic/ep138/ad53563_r1
set cdpath = ~

##  Get alias, bindings, and autocomplete definitions
source ~/.csh_alias
source ~/.csh_bindings

##  Turn off ctrl-D logoff
set ignoreeof

##  Do not auto logout from telnet and rlogin sessions
unset autologout

##  The number of lines to save in history, and across sessions
set history = 50
set savehist = 50

##  Tell me right away when a job completes
set notify 

##  Turn off the dreadful auto spelling correct function
unset correct

##  Set the prompt to something useful, this is screwed up for csh
if ($?tcsh) then
  set ellipsis
  set white = "%{\033[1;37m%}"
  set red = "%{\033[1;31m%}"
  set green = "%{\033[0;32m%}"
  set yellow = "%{\033[1;33m%}"
  set blue = "%{\033[1;34m%}"
  set magenta = "%{\033[1;35m%}"
  set cyan = "%{\033[1;36m%}"
  set default = "%{\033[0m%}"
  set prompt = "[${white}`aet_hostname`${default}:%c02]% "
  unset white red green yellow blue magenta cyan default
else
  set prompt = "% "
endif

##  Default permissions mask
umask 002

##  For ADICE5 / MATLAB interface
#  NOTE!! The following paths are not ELF little endian for use on Linux machines, only on Solaris
# setenv LD_LIBRARY_PATH ".:/cad/apps/mathworks/matlab/vr14.3/bin/sol2:${LD_LIBRARY_PATH}"
# setenv LD_LIBRARY_PATH $LD_LIBRARY_PATH:.:/cad/apps/mathworks/matlab/vr14.3/bin/sol2
# setenv LD_LIBRARY_PATH /cad/apps/mathworks/matlab/vr12.1/bin/sol2:.:$LD_LIBRARY_PATH

setenv DRACHOST ldrac
setenv DRACDISK disk1
#setenv DRACVER  4.9.3

##  this is a suggestion from Rich Adams
set filec


setenv VNCDESKTOP "kde"

## for vim editor
setenv MYVIMRC ~/.vimrc


## start ssh-agent
##   use % ssh-add ~/.ssh/<id_rsa_xyz>
eval `ssh-agent`
