##  Session alias statements 
alias la='gls -a --color'
alias ll='gls -l --color'
alias lla='gls -la --color'
alias llr='gls -lrt --color'
alias llar='gls -lart --color'
alias du='du -k'
alias df='df -k'
#function em() { xemacs 2>/dev/null "$@" & }
alias where='echo $HOST'
alias cp='cp -ip'
alias cls='clear'
alias mv='mv -i'
alias pu='pushd'
alias po='popd'

## a few mac specific helpers
alias sha1sum='shasum -a 1'
alias sha256sum='shasum -a 256'
alias md5sum='md5'
alias vim='/usr/local/bin/vim'

## alias for managing dotfile configuration
alias dot='/usr/bin/git --git-dir=$HOME/.dotfiles/ --work-tree=$HOME'

alias foo='echo hello world'
