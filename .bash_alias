##  Session alias statements 
alias ls='ls --color'
alias la='ls -a --color'
alias ll='ls -l --color'
alias lla='ls -la --color'
alias llr='ls -lrt --color'
alias llar='ls -lart --color'
alias du='du -h'
alias df='df -h'
alias ff='(firefox &>/dev/null &)'
alias firefox='(firefox &>/dev/null &)'
alias where='echo $HOST'
alias cp='cp -ip'
alias cls='clear'
alias mv='mv -i'
alias pu='pushd'
alias po='popd'
alias kon='(konsole &>/dev/null &)'
alias cd='cd -P'
alias ..='cd ..'
alias gpg='gpg --homedir /Homes/aturvey/.gnupg'
alias gpg-agent='gpg-agent --homedir /Homes/aturvey/.gnupg'
alias mod='module'

## alias for managing dotfile configuration
alias dot='/usr/bin/git --git-dir=$HOME/.dotfiles/ --work-tree=$HOME'

