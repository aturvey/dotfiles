##  Session alias statements 
alias la='gls -a --color'
alias ll='gls -l --color'
alias lla='gls -la --color'
alias llr='gls -lrt --color'
alias llar='gls -lart --color'
alias du='du -k'
alias df='df -k'
alias cp='cp -ip'
alias cls='clear'
alias mv='mv -i'
alias pu='pushd'
alias po='popd'
alias ..='cd ..'
alias git='/opt/homebrew/bin/git'

## a few mac specific helpers
alias sha1sum='shasum -a 1'
alias sha256sum='shasum -a 256'
alias md5sum='md5'

## alias for managing dotfile configuration
alias dot='git --git-dir=$HOME/.dotfiles/ --work-tree=$HOME'

# ranger
alias rn='ranger'
